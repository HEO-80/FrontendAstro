---  
import Layout from "../layouts/Layout.astro";  
import "../styles/global.css";  

import csgo2 from "../assets/miguel/csgo.jpg";
import gtaV from "../assets/miguel/gtaV.jpg";
import repo from "../assets/miguel/Repo.jpg";
---  

<Layout>  
  <main class="max-w-7xl mx-auto px-4 py-12">  
    <!-- Hero -->  
    <section class="text-center mb-12">  
      <h1 class="text-5xl font-extrabold bg-linear-to-r from-pink-500 via-purple-500 to-indigo-500 bg-clip-text text-transparent">  
        Top Juegos Recomendados  
      </h1>  
      <p class="mt-4 text-lg text-gray-300">  
        Inspirado en el estilo de doubletheblack pero aplicado a videojuegos  
      </p>  
    </section>  

    <!-- Grid de juegos -->  
    <section class="grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">  

      <!-- CSGO2 -->  
      <article class="group card bg-white/5 border border-white/10 rounded-2xl overflow-hidden shadow-lg transform transition hover:scale-105 hover:shadow-2xl duration-300">  
        <img class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110" src={csgo2.src} alt="Counter‑Strike 2" />  
        <div class="p-6">  
          <h2 class="text-2xl font-bold text-pink-400 mb-2">Counter‑Strike 2</h2>  
          <p class="text-gray-300">FPS competitivo con acción rápida, estrategia y comunidad enorme.</p>  
        </div>  
      </article>  

      <!-- GTA V -->  
      <article class="group card bg-white/5 border border-white/10 rounded-2xl overflow-hidden shadow-lg transform transition hover:scale-105 hover:shadow-2xl duration-300">  
        <img class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110" src={gtaV.src} alt="GTA V" />  
        <div class="p-6">  
          <h2 class="text-2xl font-bold text-purple-400 mb-2">Grand Theft Auto V</h2>  
          <p class="text-gray-300">Mundo abierto, caos urbano, acción, robos y conducción en Los Santos.</p>  
        </div>  
      </article>  

      <!-- R.E.P.O. -->  
      <article class="group card bg-white/5 border border-white/10 rounded-2xl overflow-hidden shadow-lg transform transition hover:scale-105 hover:shadow-2xl duration-300">  
        <img class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110" src={repo.src} alt="R.E.P.O." />  
        <div class="p-6">  
          <h2 class="text-2xl font-bold text-indigo-400 mb-2">R.E.P.O.</h2>  
          <p class="text-gray-300">Aventura narrativa / acción, con atmósfera intensa y decisiones.</p>  
        </div>  
      </article>  

    </section>  
  </main>  

  <!-- Script de rotación de juegos -->  
  <script type="module">  
    const games = [  
      { img: import.meta.env.BASE_URL + "{csgo2}", title: 'Counter‑Strike 2', desc: 'FPS competitivo con acción rápida, estrategia y comunidad enorme.' },  
      { img: import.meta.env.BASE_URL + "{gtaV}", title: 'Grand Theft Auto V', desc: 'Mundo abierto, caos urbano, acción, robos y conducción en Los Santos.' },  
      { img: import.meta.env.BASE_URL + "{repo}", title: 'R.E.P.O.', desc: 'Aventura narrativa / acción, con atmósfera intensa y decisiones.' }  
    ];  

    let index = 0;  
    setInterval(() => {  
      const cards = document.querySelectorAll('.card');  
      cards.forEach((card, i) => {  
        const game = games[(index + i) % games.length];  
        card.querySelector('img').src = game.img;  
        card.querySelector('h2').textContent = game.title;  
        card.querySelector('p').textContent = game.desc;  
      });  
      index++;  
    }, 4000);  
  </script>  
</Layout>  
