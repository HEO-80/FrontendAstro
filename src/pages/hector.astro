<style>
  @import url("https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@500;700&display=swap");

  * {
    box-sizing: border-box;
  }

  body {
    font-family: "Rajdhani", sans-serif;
    background: #0a0a0f;
    background-image:
      radial-gradient(
        circle at 20% 50%,
        rgba(255, 204, 0, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 80%,
        rgba(0, 255, 255, 0.1) 0%,
        transparent 50%
      ),
      linear-gradient(0deg, #0a0a0f 0%, #1a1a2e 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    margin: 0;
    margin-top: 100px;
    position: relative;
    overflow-x: hidden;
  }

  body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      linear-gradient(rgba(255, 204, 0, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 204, 0, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    pointer-events: none;
    z-index: 1;
    animation: grid-move 10s linear infinite;
  }

  @keyframes grid-move {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(50px, 50px);
    }
  }

  h1 {
    font-family: "Orbitron", monospace;
    font-weight: 900;
    font-size: 4rem;
    color: #ffcc00;
    text-transform: uppercase;
    margin-bottom: 3rem;
    text-shadow:
      0 0 10px #ffcc00,
      0 0 20px #ffcc00,
      0 0 30px #ffcc00,
      0 0 40px #ff9900;
    letter-spacing: 4px;
    position: relative;
    z-index: 10;
    animation: title-glitch 3s infinite;
  }

  @keyframes title-glitch {
    0%,
    100% {
      text-shadow:
        0 0 10px #ffcc00,
        0 0 20px #ffcc00,
        0 0 30px #ffcc00;
    }
    25% {
      text-shadow:
        -2px 0 #00ffff,
        2px 0 #ff00ff,
        0 0 20px #ffcc00;
    }
    50% {
      text-shadow:
        2px 0 #00ffff,
        -2px 0 #ff00ff,
        0 0 30px #ffcc00;
    }
    75% {
      text-shadow:
        0 0 10px #ffcc00,
        0 0 40px #ff9900;
    }
  }

  .container {
    perspective: 1000px;
    display: flex;
    gap: 2rem;
  }

  .box {
    width: 100px;
    height: 100px;
    background: linear-gradient(45deg, #ff6b6b, #feca57);
    border-radius: 12px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  /* Animation for the first box */
  .box:first-child {
    animation: floatAndSpin 3s ease-in-out infinite;
  }

  /* Hover effects for the second box */
  .hover-box {
    background: linear-gradient(45deg, #4facfe, #00f2fe);
  }

  .hover-box:hover {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    background: linear-gradient(45deg, #00f2fe, #4facfe);
  }

  @keyframes floatAndSpin {
    0% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
    100% {
      transform: translateY(0) rotate(360deg);
    }
  }

  /* Futuristic Footer */
  .cyber-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #0a0a12;
    padding: 20px 0;
    border-top: 2px solid #00ffff;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
    z-index: 100;
  }

  .cyber-line {
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #ff00ff, transparent);
    animation: scanline 2s linear infinite;
    position: absolute;
    top: 0;
  }

  .cyber-content {
    display: flex;
    justify-content: space-between;
    width: 80%;
    font-family: "Courier New", Courier, monospace;
    color: #00ffff;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .cyber-text {
    position: relative;
    text-shadow: 0 0 5px #00ffff;
  }

  .cyber-glitch {
    font-weight: bold;
    color: #ff00ff;
    text-shadow: 2px 2px #00ffff;
    animation: glitch 1s infinite alternate-reverse;
  }

  @keyframes scanline {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  @keyframes glitch {
    0% {
      text-shadow: 2px 2px #00ffff;
      transform: skew(0deg);
    }
    20% {
      text-shadow: -2px -2px #ff00ff;
      transform: skew(10deg);
    }
    40% {
      text-shadow: 2px -2px #00ffff;
      transform: skew(-5deg);
    }
    60% {
      text-shadow: -2px 2px #ff00ff;
      transform: skew(0deg);
    }
    80% {
      text-shadow: 2px 2px #00ffff;
      transform: skew(5deg);
    }
    100% {
      text-shadow: -2px -2px #ff00ff;
      transform: skew(0deg);
    }
  }

  /* Cyberpunk 2077 Navigation */
  .cyber-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    padding: 1.5rem 0;
    border-bottom: 3px solid #ffcc00;
    box-shadow: 0 4px 20px rgba(255, 204, 0, 0.3);
    z-index: 1000;
    backdrop-filter: blur(10px);
  }

  .cyber-nav::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #ffcc00, transparent);
    animation: nav-scan 3s linear infinite;
  }

  @keyframes nav-scan {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  .cyber-menu {
    display: flex;
    justify-content: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
    position: relative;
    z-index: 10;
  }

  .cyber-link {
    text-decoration: none;
    color: #ffcc00;
    font-family: "Orbitron", monospace;
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
    position: relative;
    letter-spacing: 2px;
    transition: all 0.3s;
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid transparent;
    clip-path: polygon(0 0, 100% 0, 95% 100%, 5% 100%);
  }

  .cyber-link:hover {
    color: #000;
    background: linear-gradient(135deg, #ffcc00, #ff9900);
    border-color: #ffcc00;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 204, 0, 0.5);
    text-shadow: 0 0 5px rgba(0, 0, 0, 0.8);
  }

  .cyber-link::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      transparent,
      rgba(255, 204, 0, 0.1),
      transparent
    );
    opacity: 0;
    transition: opacity 0.3s;
    z-index: -1;
  }

  .cyber-link:hover::before {
    opacity: 1;
  }

  /* Glitch effect on hover for nav links */
  .cyber-link:hover::after {
    content: attr(data-text);
    position: absolute;
    left: 2px;
    text-shadow: -1px 0 #ff00ff;
    top: 0;
    color: #00ffff;
    background: #000;
    overflow: hidden;
    clip: rect(0, 900px, 0, 0);
    animation: noise-anim 2s infinite linear alternate-reverse;
  }

  @keyframes noise-anim {
    0% {
      clip: rect(2px, 9999px, 1px, 0);
    }
    5% {
      clip: rect(15px, 9999px, 8px, 0);
    }
    10% {
      clip: rect(5px, 9999px, 20px, 0);
    }
    15% {
      clip: rect(25px, 9999px, 10px, 0);
    }
    20% {
      clip: rect(2px, 9999px, 30px, 0);
    }
    25% {
      clip: rect(10px, 9999px, 5px, 0);
    }
    30% {
      clip: rect(35px, 9999px, 15px, 0);
    }
    35% {
      clip: rect(5px, 9999px, 25px, 0);
    }
    40% {
      clip: rect(20px, 9999px, 40px, 0);
    }
    45% {
      clip: rect(10px, 9999px, 5px, 0);
    }
    50% {
      clip: rect(30px, 9999px, 10px, 0);
    }
    55% {
      clip: rect(5px, 9999px, 35px, 0);
    }
    60% {
      clip: rect(15px, 9999px, 5px, 0);
    }
    65% {
      clip: rect(40px, 9999px, 20px, 0);
    }
    70% {
      clip: rect(10px, 9999px, 5px, 0);
    }
    75% {
      clip: rect(25px, 9999px, 15px, 0);
    }
    80% {
      clip: rect(5px, 9999px, 30px, 0);
    }
    85% {
      clip: rect(35px, 9999px, 10px, 0);
    }
    90% {
      clip: rect(15px, 9999px, 25px, 0);
    }
    95% {
      clip: rect(5px, 9999px, 10px, 0);
    }
    100% {
      clip: rect(20px, 9999px, 5px, 0);
    }
  }

  <style > * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Rajdhani", sans-serif;
    background: #0a0a0f;
    background-image:
      radial-gradient(
        circle at 20% 50%,
        rgba(255, 204, 0, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 80%,
        rgba(0, 255, 255, 0.1) 0%,
        transparent 50%
      ),
      linear-gradient(0deg, #0a0a0f 0%, #1a1a2e 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }

  body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      linear-gradient(rgba(255, 204, 0, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 204, 0, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    pointer-events: none;
    z-index: 1;
    animation: grid-move 10s linear infinite;
  }

  @keyframes grid-move {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(50px, 50px);
    }
  }

  .typing-container {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
  }

  #typing-text {
    font-family: "Orbitron", monospace;
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    color: #ffcc00;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1rem;
    position: relative;
    display: inline-block;
  }

  .cyber-glitch-text {
    text-shadow:
      0 0 10px #ffcc00,
      0 0 20px #ffcc00,
      0 0 30px #ffcc00;
    animation: text-flicker 3s infinite;
  }

  .cursor {
    display: inline-block;
    width: 3px;
    background: #00ffff;
    margin-left: 4px;
    animation: cursor-blink 0.5s infinite;
  }

  .glitch-layer-1,
  .glitch-layer-2 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.7;
    pointer-events: none;
  }

  .glitch-layer-1 {
    color: #00ffff;
    animation: glitch-1 2s infinite;
    clip-path: polygon(0 0, 100% 0, 100% 45%, 0 45%);
  }

  .glitch-layer-2 {
    color: #ff00ff;
    animation: glitch-2 2.5s infinite;
    clip-path: polygon(0 55%, 100% 55%, 100% 100%, 0 100%);
  }

  .status-indicator {
    margin-top: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    animation: fade-in 0.5s ease-out;
  }

  .status-indicator.hidden {
    display: none;
  }

  .status-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #00ff00;
    box-shadow: 0 0 10px #00ff00;
    animation: pulse-dot 1.5s infinite;
  }

  .status-text {
    color: #00ffff;
    font-family: "Rajdhani", sans-serif;
    font-size: 0.875rem;
    letter-spacing: 0.2em;
    font-weight: 700;
  }

  @keyframes text-flicker {
    0%,
    100% {
      text-shadow:
        0 0 10px #ffcc00,
        0 0 20px #ffcc00,
        0 0 30px #ffcc00;
    }
    50% {
      text-shadow:
        0 0 5px #ffcc00,
        0 0 10px #ffcc00;
    }
  }

  @keyframes cursor-blink {
    0%,
    49% {
      opacity: 1;
    }
    50%,
    100% {
      opacity: 0;
    }
  }

  @keyframes glitch-1 {
    0%,
    100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    10% {
      transform: translate(-3px, 2px);
      opacity: 0.7;
    }
    20% {
      transform: translate(2px, -1px);
      opacity: 0;
    }
  }

  @keyframes glitch-2 {
    0%,
    100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    15% {
      transform: translate(3px, -2px);
      opacity: 0.7;
    }
    25% {
      transform: translate(-2px, 1px);
      opacity: 0;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse-dot {
    0%,
    100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.7;
    }
  }
</style>

<script>
  const fullText = "ACCESO CONCEDIDO // PERMISOS DE SISTEMA ACTIVADOS";
  let currentIndex = 0;

  const textDisplay = document.getElementById("text-display");
  const cursor = document.getElementById("cursor");
  const glitchLayer1 = document.getElementById("glitch-layer-1");
  const glitchLayer2 = document.getElementById("glitch-layer-2");
  const statusIndicator = document.getElementById("status-indicator");

  function typeText() {
    if (currentIndex < fullText.length) {
      const currentText = fullText.substring(0, currentIndex + 1);
      if (textDisplay) textDisplay.textContent = currentText;
      if (glitchLayer1) glitchLayer1.textContent = currentText;
      if (glitchLayer2) glitchLayer2.textContent = currentText;
      currentIndex++;

      setTimeout(typeText, 80);
    } else {
      if (cursor) cursor.style.display = "none";
      if (statusIndicator) statusIndicator.classList.remove("hidden");
    }
  }

  typeText();
</script>
