<style>
	/* --- Animación por defecto (mobile) --- */
	@keyframes scroll {
		0% {
			transform: translateX(100%);
		}
		100% {
			transform: translateX(-5800px);
		} /* distancia para pantallas pequeñas */
	}

	.animate-scroll {
		animation: scroll 20s linear infinite;
	}

	/* --- sm (min-width: 640px) --- */
	@media (min-width: 640px) {
		@keyframes scroll-sm {
			0% {
				transform: translateX(100%);
			}
			100% {
				transform: translateX(-300vw);
			}
		}
		.animate-scroll {
			animation: scroll-sm 20s linear infinite;
		}
	}

	/* --- md (min-width: 768px) --- */
	@media (min-width: 768px) {
		@keyframes scroll-md {
			0% {
				transform: translateX(100%);
			}
			100% {
				transform: translateX(-350vw);
			}
		}
		.animate-scroll {
			animation: scroll-md 20s linear infinite;
		}
	}

	/* --- lg (min-width: 1024px) --- */
	@media (min-width: 1024px) {
		@keyframes scroll-lg {
			0% {
				transform: translateX(100%);
			}
			100% {
				transform: translateX(-450vw);
			} /* tu distancia original */
		}
		.animate-scroll {
			animation: scroll-lg 20s linear infinite;
		}
	}
</style>
