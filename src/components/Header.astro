    <div
      class="items-center hidden md:flex md:w-auto md:order-1 group"
      id="navbar-search"
    >
      <ul
        class="absolute left-1/2 -translate-x-1/2 top-full z-50
                 bg-white border border-default rounded-base shadow-lg
                 px-4 py-2 flex flex-row gap-4
