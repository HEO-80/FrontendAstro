    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --dark-bg: #0f0f15;
            --card-bg: #14141d;
            --text-primary: #ffffff;
            --text-secondary: #8a8fa3;
            --border-color: rgba(255, 255, 255, 0.08);
        }

        body {
            font-family: "Ubuntu", sans-serif;
            background: var(--dark-bg);
            color: var(--text-primary);
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        /* Hero */
        .hero {
            padding: 6rem 0 3rem;
            text-align: center;
        }

        .hero-title {
            font-size: clamp(2.5rem, 6vw, 4rem);
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .gradient-text {
            background: linear-gradient(135deg, #7b7df0, #a682ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero-subtitle {
            font-size: 1.15rem;
            color: var(--text-secondary);
            max-width: 580px;
            margin: 0 auto;
        }

        /* Contact Layout */
        .contact-section {
            padding: 4rem 0 6rem;
        }

        .contact-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
        }

        /* Form */
        .contact-form-wrapper {
            background: var(--card-bg);
            padding: 2.5rem;
            border-radius: 26px;
            border: 1px solid var(--border-color);
        }

        .form-header h2 {
            font-size: 1.6rem;
            margin-bottom: 0.5rem;
        }

        .form-header p {
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.3rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.4rem;
            font-size: 0.9rem;
            color: var(--text-primary);
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 0.8rem 1.1rem;
            background: #1a1a24;
            border: 1px solid var(--border-color);
            border-radius: 26px;
            color: var(--text-primary);
            font-size: 0.95rem;
            transition: border 0.25s ease;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            border-color: #7b7df0;
            outline: none;
        }

        .submit-btn {
            width: 100%;
            padding: 0.9rem 2rem;
            background: #7b7df0;
            border: none;
            border-radius: 26px;
            color: #fff;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: opacity 0.25s;
        }

        .submit-btn:hover {
            opacity: 0.85;
        }

        /* Info cards */
        .contact-info-wrapper {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        .info-cards {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        .info-card {
            background: var(--card-bg);
            padding: 1.4rem;
            border-radius: 26px;
            border: 1px solid var(--border-color);
            text-align: center;
            transition: border 0.25s ease;
        }

        .info-card:hover {
            border-color: #7b7df0;
        }

        .card-icon {
            font-size: 1.7rem;
            margin-bottom: 0.5rem;
        }

        .info-card h3 {
            margin-bottom: 0.4rem;
            font-size: 0.95rem;
        }

        .info-card a,
        .info-card p {
            color: var(--text-secondary);
            font-size: 0.9rem;
            text-decoration: none;
        }

        /* Map */
        .map-wrapper {
            background: var(--card-bg);
            padding: 1.8rem;
            border-radius: 26px;
            border: 1px solid var(--border-color);
        }

        .map-title {
            font-size: 1.3rem;
            margin-bottom: 1rem;
        }

        /* Responsive */
        @media (max-width: 968px) {
            .contact-grid {
                grid-template-columns: 1fr;
            }

            .contact-form-wrapper {
                padding: 2rem;
            }
        }

        @media (max-width: 640px) {
            .info-cards {
                grid-template-columns: 1fr;
            }

            .hero-title {
                font-size: 2.3rem;
            }
        }
    </style>

    <script>
        const form = document.getElementById("contactForm") as HTMLFormElement;

        form?.addEventListener("submit", (e) => {
            e.preventDefault();

            // Get form data
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            console.log("Form submitted:", data);

            // Show success message
            const submitBtn = form.querySelector(
                ".submit-btn",
            ) as HTMLButtonElement;
            const originalText = submitBtn.innerHTML;

            submitBtn.innerHTML = "<span>‚úì Mensaje enviado</span>";
            submitBtn.style.background =
                "linear-gradient(135deg, #11998e 0%, #38ef7d 100%)";

            // Reset form
            setTimeout(() => {
                form.reset();
                submitBtn.innerHTML = originalText;
                submitBtn.style.background = "";
            }, 3000);
        });
    </script>
</html>
